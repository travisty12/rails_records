<!DOCTYPE html>
<html>
  <head>
    <title>Papa's Permanent Records</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash[:alert] %>
    <%= flash[:notice] %>

    <div class="header">
      <div class="home">
        <h4><a href="/">Home</a></h4>
      </div>
      <div class="title">
        <h3><a href="/">Papa's Permanent Records</a></h3>
      </div>
      <div class="links">
      <h4><%=link_to "Albums", albums_path %></h4>
      <h4><%=link_to "Artists", artists_path %></h4>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
