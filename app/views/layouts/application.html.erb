<!DOCTYPE html>
<html>
  <head>
    <title>RailsRecords</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash[:alert] %>
    <%= flash[:notice] %>

    <div class="header">
      <div class="home">
        <h3><a href="/">Home</a></h3>
      </div>
      <div class="navbar-class">
        <h3><a href="/">Rails Record Emporium</a></h3>
      </div>
      <div class="links">
        <h3><%=link_to "Albums", albums_path %></h3>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
